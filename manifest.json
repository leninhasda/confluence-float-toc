{
  "manifest_version": 3,
  "name": "Confluence Float Table of Content",
  "description": "Adds a floating table of contents sidebar to Confluence pages for easy navigation",
  "version": "1.0.0",
  "author": "Lenin Hasda <leninhasada@gmail.com>h",
  "homepage_url": "https://github.com/leninhasabu/confluence-float-toc",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/*",
        "*://*.confluence.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"]
}
